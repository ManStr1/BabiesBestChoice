<html>

<head></head>
<title name = "title">ПРИВЕТ</title>
<link rel="stylesheet" type="text.css" href="/css/bootstrap.min.css">

<body>
    <div class="container"></div>
    <center>
        <div class="well"><b>Items Details</b></div>
    </center>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th> 
                <th>Price</th>
                <th>Size</th>
                <th>Color</th>
            </tr>
            <% for (var item of items) { %>
            <tr>
                <th><%= item.ITEM_NAME %></th>
                <th><%= item.ITEM_DESCRIPTION %></th>
                <th><%= item.ITEM_PRICE %></th>
                <th><%= item.ITEM_SIZE %></th>
                <th><%= item.ITEM_COLOR %></th>

            </tr>
            <% } %>
        </thead>
    </table>
</body>

</html>