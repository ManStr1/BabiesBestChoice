<!TYPE html>
<html>
	<head>
		<link href = "style.css" rel = "stylesheet">
		<meta http-equiv = "Content-Type" content = "text/html"; charset = "UTF-8">
		<title>BBC</title>
		<script defer src = "script.js"></script>
	</head>
	
	<body class = "main-body">

		<!-- Для всей головы -->
		<div class = "header">

			<!-- Линия наверху -->
			<div class = "header-line"></div> 

			<!-- Мой блок для головы -->
			<div class = "myinline-block">		

				<!-- Кнопка навигации -->
				<div class = "navigation">
					<button data-modal-target = "#modal" id = "settings"></button>
					<div class = "modal" id = "modal">
						<div class = "modal-header">
							<div class = "title">Категории</div>
							<button data-close-button class = "close-button">&times;</button>
						</div>

						<% if (roles[0].USER_ROLE == "Admin") { %>
						<div class = "modal-body" onclick="window.location='/admin_menu';">
							Панель управления
						</div>
						<% } %>
						
						<% for (var category of categories) { %>
						<div class = "modal-body" onclick="window.location='/<%= category.CATEGORY_NAME %>';"><%= category.CATEGORY_NAME %></div>
						<% } %>

						
						
					</div>
					<div id = "overlay"></div>
				</div>

				<!-- Логотип -->
				<a href="/"><img src = "images/logo.png" id = "logo"></img></a>

				<!-- Поисковик -->
				<div class="topnav">
					
					<div class="search-container">

						<form action = "/search_result" method="POST">

							<input name="search_item" type="text" placeholder="Search.." />
							<button type="submit"><i class="fa fa-search"></i></button>
						
						</form>
					</div>

					
				</div>
				<div class = "login-box">
					<% if (roles[0].USER_ROLE == "") { %>
						<div onclick="window.location='/login'">
							Log in
						</div>
					<% } else { %>
						<div onclick="window.location='/logout'">
							Log out
						</div>
					<% } %>
				</div>
				
			</div>

			
		</div>

		<!-- Тело сайта -->
		<div class = "my-body">
			<h2><%= message %></h2>

			<!-- Тут карусель для времен года -->
			<div class="slideshow-container">

				<!-- Картинки -->
				<div class="mySlides fade">
				  <img src="images/img1.jpg" style="width:100%">
				</div>
			  
				<div class="mySlides fade">
				  <img src="images/img2.jpg" style="width:100%">
				</div>
			  
				<div class="mySlides fade">
				  <img src="images/img3.jpg" style="width:100%">
				</div>
			  </div>
			  <br>
			  
			  <!-- Круглишки переключения -->
			  <div style="text-align:center">
				<span class="dot" onclick="showSlidesByDots(1)"></span>
				<span class="dot" onclick="showSlidesByDots(2)"></span>
				<span class="dot" onclick="showSlidesByDots(3)"></span>
			  </div>
			</div>
			
			
		</div>
	</body>
</html>

